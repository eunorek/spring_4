<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.maggie.s4.board.notice.NoticeDAO" >
	<update id="setUpdate" parameterType="NoticeDTO">
		UPDATE board SET title=#{title}, contents=#{contents} WHERE num = #{num}
	</update>
	
	<delete id="setDelete" parameterType="NoticeDTO">
		DELETE FROM board WHERE num = #{num}
	</delete>
	
	<select id="getOne" parameterType="NoticeDTO" resultType="NoticeDTO">
		SELECT * FROM board WHERE num = #{num}	
	</select>
	
	<insert id="setInsert" parameterType="NoticeDTO">
		INSERT INTO board values(notice_seq.NEXTVAL, #{title}, #{writer}, #{contents}, sysdate, 0)
	</insert>
	
	<select id="getList" resultType="NoticeDTO" parameterType="Pager">
		SELECT * FROM
		(SELECT rownum R, N.* FROM
			(SELECT * FROM board WHERE
				<choose>
					<when test="kind == 'tt'">
						title 
					</when>
					<when test="kind == 'wr'">
						writer 
					</when>
					<otherwise>
						contents 
					</otherwise>
				</choose>
			LIKE '%' || #{search} || '%' ORDER BY num DESC) N)
		WHERE R BETWEEN #{startRow} and #{lastRow}		
	</select>
	<select id="getCount" resultType="Long" parameterType="Pager">
		SELECT COUNT(num) FROM board
		WHERE
			<choose>
				<when test="kind == 'tt'">
					title
				</when>
				<when test="kind == 'wr'">
					writer
				</when>
				<otherwise>
					contents
				</otherwise>
			</choose>	
			LIKE '%' || #{search} || '%'	
	</select>
</mapper>